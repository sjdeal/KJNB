<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#0066FF"
                android:endColor="#002966"
                android:gradientRadius="400"
                android:type="radial" />
            <stroke
                android:width="2dp"
                android:color="#555555" />
            <corners
                android:radius="35dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:startColor="#00FF00"
                android:endColor="#009900"
                android:gradientRadius="400"
                android:type="radial" />
            <stroke
                android:width="2dp"
                android:color="#555555" />
            <corners
                android:radius="35dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
    
    
    
    

</selector>
